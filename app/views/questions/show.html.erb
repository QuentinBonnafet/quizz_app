<h1><%= @question.content %></h1>

<%= form_with url: check_answer_question_path(@question), method: :post do %>
  <%= text_field_tag :answer %>
  <%= submit_tag "Submit" %>
<% end %>
<% if @result.present? %>
  <p style="color: <%= @result == 'Correct!' ? 'green' : 'red' %>;"><%= @result %></p>
<% end %>

<%= link_to 'Back', questions_path %>
